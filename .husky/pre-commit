echo "[Action] 수동으로 ESLint 및 Prettier 실행..."
# Windows에서 실행할 수 있도록 수정
for file in $FE_FILES; do
  # RELATIVE_PATH=${file#"$PROJECT_ROOT/be15_DevEagles_FE/"} # 이전 코드
  # 수정된 코드: "be15_DevEagles_FE/" 접두사를 제거하여 현재 디렉토리 기준 상대 경로를 만듭니다.
  # PATH_FOR_LINTERS=${file#"be15_DevEagles_FE/"} # 이전 방식
  PATH_FOR_LINTERS=$(echo "$file" | sed 's|^be15_DevEagles_FE/||')
  echo "📝 Processing file: $PATH_FOR_LINTERS (Original full path: $file)"
  
  # ESLint 실행
  echo "Running ESLint on $PATH_FOR_LINTERS"
  ./node_modules/.bin/eslint --fix "$PATH_FOR_LINTERS" || true
  
  # Prettier 실행
  echo "Running Prettier on $PATH_FOR_LINTERS"
  ./node_modules/.bin/prettier --write "$PATH_FOR_LINTERS" || true
done

# 변경된 프론트엔드 파일 다시 스테이징 